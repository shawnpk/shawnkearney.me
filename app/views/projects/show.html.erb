<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %b %d') %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @project.description %>
    <div class="button_wrapper">
      <%= link_to @project.title, @project.link, class: 'project_button', target: '_blank' %>
    </div>
  </div><!-- end #content -->

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_project_path(@project) %>
      <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: 'Are you sure you want to delete this project?' } %>
    </div>
  <% end %>

  <hr>

</div>
